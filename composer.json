{
    "name": "softcatala/web2015",
    "description": "Softcatal√† Website",
    "repositories":[
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "http://languages.koodimonni.fi"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^4.3.1",
        "koodimonni-language/ca": "^4.3.1",
        "wpackagist-plugin/wordpress-seo":"^3.0",
        "wpackagist-plugin/akismet":"^3.1",
        "afragen/github-updater": "^5.1.2",
        "wpackagist-plugin/timber-library":"^0.22",
        "wpackagist-plugin/types":"^1.8",
        "xavivars/types-timber-integration":"^0.4", 
        "softcatala/wp-theme-mover":"^0.1.0",
        "softcatala/wp-softcatala":"^0.0.3"
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "plugins/{$name}/": ["type:wordpress-plugin"],
            "themes/{$name}/": ["type:wordpress-theme"]
        },
        "dropin-paths": {
            "wp/wp-content/languages/": ["vendor:koodimonni-language"],
            "wp/wp-content/languages/plugins/": ["vendor:koodimonni-plugin-language"],
            "wp/wp-content/languages/themes/": ["vendor:koodimonni-theme-language"]
        }
    },
    "scripts": {
        "pre-update-cmd": [
            "cd wp && wp plugin deactivate --all"
        ],
        "post-update-cmd": [
            "cd wp && wp core update-db && wp theme delete twentyten && wp theme delete twentyeleven && wp theme delete twentytwelve && wp theme delete twentythirteen && wp theme delete twentyfourteen",
            "cd wp && wp plugin activate --all",
            "cd wp && rm -rf wp-config.php && ln -s ../../web-2015/wp-config.php"
        ]
    }
}